<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="enableNotification">true</bool>
    <bool name="enableSiteSettingsShortcut">true</bool>
    <color name="backgroundColor">#FFFFFF</color>
    <color name="colorPrimary">#1F2937</color>
    <color name="colorPrimaryDark">#000000</color>
    <color name="navigationColor">#000000</color>
    <color name="navigationColorDark">#000000</color>
    <color name="navigationDividerColor">#000000</color>
    <color name="navigationDividerColorDark">#000000</color>
    <color name="shortcut_background">#F5F5F5</color>
    <integer name="splashScreenFadeOutDuration">300</integer>
    <string name="appName" translatable="false">ScoreGenius</string>
    <string name="assetStatements">[{
\"relation\": [\"delegate_permission/common.handle_all_urls\"],
\"target\": {\"namespace\": \"web\", \"site\": \"https://scoregenius.io\"}
}]</string>
    <string name="fallbackType" translatable="false">customtabs</string>
    <string name="fullScopeUrl" translatable="false">https://scoregenius.io/app</string>
    <string name="generatorApp" translatable="false">bubblewrap-cli</string>
    <string name="hostName" translatable="false">scoregenius.io</string>
    <string name="launchUrl" translatable="false">https://scoregenius.io/app</string>
    <string name="launcherName" translatable="false">ScoreGenius</string>
    <string name="orientation" translatable="false">default</string>
    <string name="providerAuthority" translatable="false">io.scoregenius.app.fileprovider</string>
    <string name="webManifestUrl" translatable="false">https://scoregenius.io/manifest.webmanifest</string>
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.TwaLauncher</item>
    </style>
    <style name="Theme.TwaLauncher" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>