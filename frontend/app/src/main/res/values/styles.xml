<!-- res/values/styles.xml -->
<resources>
    <!-- Base app theme -->
    <style name="Theme.ScoreGenius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Splash theme used by trampoline activity -->
    <style name="Theme.ScoreGenius.Splash" parent="Theme.ScoreGenius">
        <!-- This drawable will have a white background already -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
