<resources>
    <style name="Theme.ScoreGenius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="Theme.ScoreGenius.Splash" parent="Theme.ScoreGenius">
        <!-- Single-stage on API 30: flat background, logo drawn by compat view -->
        <item name="android:windowBackground">@color/backgroundColor</item>

        <!-- Compat splash shows the real logo immediately (no chip, no fade) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenBackground">@color/backgroundColor</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="windowSplashScreenAnimationDuration">0</item>

        <!-- Required by compat -->
        <item name="splashScreenIconSize">48dp</item>
        <item name="postSplashScreenTheme">@style/Theme.ScoreGenius</item>
    </style>
</resources>
