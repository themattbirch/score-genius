<!-- res/values-v30/styles.xml -->
<resources>
    <!-- Keep base theme consistent on API 30 and below -->
    <style name="Theme.ScoreGenius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <!-- Legacy splash for API 30 and below (no Theme.SplashScreen) -->
    <style name="Theme.ScoreGenius.Splash" parent="Theme.ScoreGenius">
        <!-- Branded static background (layer-list with white + centered splash) -->
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- Compat splashscreen expectations (prevent InflateException) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_blank</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="splashScreenIconSize">48dp</item>
        <item name="postSplashScreenTheme">@style/Theme.ScoreGenius</item>
    </style>
</resources>
