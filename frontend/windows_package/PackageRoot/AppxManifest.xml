<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  IgnorableNamespaces="uap">

  <Identity Name="mattbwebdev.ScoreGenius"
            Publisher="CN=F55BAB6B-31B3-48DF-AEF9-64E278573516"
            Version="1.12.48.0" />

  <Properties>
    <DisplayName>ScoreGenius</DisplayName>
    <PublisherDisplayName>mattbwebdev</PublisherDisplayName>
    <Description>Predict the game. Not the noise.</Description>
    <Logo>assets/StoreLogo.png</Logo>
  </Properties>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop"
                        MinVersion="10.0.19041.0"
  />
  </Dependencies>

  <Capabilities>
    <Capability Name="internetClient" />
  </Capabilities>

  <Applications>
    <Application Id="App" StartPage="ms-appx-web:///loader.html">
      <uap:VisualElements DisplayName="ScoreGenius"
                          Description="Predict the game. Not the noise."
                          BackgroundColor="#000000"
                          Square44x44Logo="assets/Square44x44.png"
                          Square150x150Logo="assets/Square150x150Logo.png">
        <uap:SplashScreen Image="assets/SplashScreen.png" />
      </uap:VisualElements>

      <!-- Allow hosted content + common CDNs/services used by modern PWAs -->
      <uap:ApplicationContentUriRules>
        <!-- App host: grant full Windows runtime access for smooth integration -->
        <uap:Rule Match="https://scoregenius.io/*" Type="include" WindowsRuntimeAccess="all" />

        <!-- Early font preloads from /app/index.html -->
        <uap:Rule Match="https://fonts.googleapis.com/*" Type="include" />
        <uap:Rule Match="https://fonts.gstatic.com/*"   Type="include" />
      </uap:ApplicationContentUriRules>
    </Application>
  </Applications>
</Package>
